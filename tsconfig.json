{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"outDir": "dist",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules"]
}
